<div class="row">
  <div class="col-md-12">
    <div class="content-box-large">
      <div class="panel-heading">
        <div class="panel-title">
          <h3><%= t ".tours_list" %></h3>
        </div>
        <%= link_to t(".create_tour"), new_admin_tour_path, class: "btn btn-primary pull-right" %>
        <div class="form-inline search-form">
          <div class="form-group">
            <%= search_form_for @search_tours, url: admin_tours_path, method: :get do |f| %>
              <%= f.search_field :id_eq, class: "form-control", placeholder: t(".id") %>
              <%= f.search_field :name_cont, class: "form-control", placeholder: t(".tour_name") %>
              <%= f.search_field :category_name_cont, class: "form-control", placeholder: t(".category_tour") %>
              <%= f.search_field :itinerary_cont, class: "form-control", placeholder: t(".itinerary") %>
              <%= submit_tag t(".search"), name: nil, class: "btn btn-default btn-search" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th><%= t ".tour_name" %></th>
              <th><%= t ".short_description" %></th>
              <th><%= t ".category_tour" %></th>
              <th><%= t ".itinerary" %></th>
              <th><%= t ".image" %></th>
              <th><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @tours %>
          </tbody>
        </table>
        <%= will_paginate @tours %>
      </div>
    </div>
  </div>
</div>
