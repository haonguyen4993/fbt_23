<% if @description_detail.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= pluralize @description_detail.errors.count, t(".error") %>.
    </div>
    <ul>
    <% @description_detail.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
